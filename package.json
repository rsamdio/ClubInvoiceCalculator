{
  "name": "rotaract-club-invoice-calculator",
  "version": "2.0.0",
  "description": "World-class Rotaract Club Invoice Calculator with exceptional performance and load speeds",
  "main": "app.js",
  "scripts": {
    "dev": "npm run serve",
    "serve": "python3 -m http.server 8000",
    "build": "npm run optimize && npm run minify",
    "optimize": "npm run optimize:css && npm run optimize:js && npm run optimize:images",
    "optimize:css": "npm run critical-css && npm run purge-css",
    "optimize:js": "npm run bundle-js && npm run minify-js",
    "optimize:images": "npm run compress-images",
    "critical-css": "node scripts/critical-css.js",
    "purge-css": "purgecss --css styles.css --content index.html,app.js --output styles.purged.css",
    "bundle-js": "webpack --mode production",
    "minify-js": "terser app.js -o app.min.js --compress --mangle",
    "minify": "npm run minify:css && npm run minify:js",
    "minify:css": "cleancss -o styles.min.css styles.css",
    "minify:js": "terser app.js -o app.min.js --compress --mangle",
    "compress-images": "imagemin images/* --out-dir=images/optimized",
    "analyze": "npm run analyze:bundle && npm run analyze:performance",
    "analyze:bundle": "webpack-bundle-analyzer dist/bundle.js",
    "analyze:performance": "lighthouse http://localhost:8000 --output=json --output-path=./lighthouse-report.json",
    "test": "npm run test:unit && npm run test:performance",
    "test:unit": "jest",
    "test:performance": "npm run test:load && npm run test:memory",
    "test:load": "artillery quick --count 100 --num 10 http://localhost:8000",
    "test:memory": "node scripts/memory-test.js",
    "lint": "eslint app.js --fix",
    "format": "prettier --write \"**/*.{js,css,html,json,md}\"",
    "audit": "npm audit && npm run audit:security",
    "audit:security": "snyk test",
    "deploy": "npm run build && npm run deploy:upload",
    "deploy:upload": "node scripts/deploy.js",
    "monitor": "npm run monitor:performance && npm run monitor:errors",
    "monitor:performance": "node scripts/performance-monitor.js",
    "monitor:errors": "node scripts/error-monitor.js",
    "clean": "rm -rf dist/ node_modules/ .cache/",
    "install:prod": "npm ci --only=production",
    "install:dev": "npm install",
    "start": "npm run serve"
  },
  "keywords": [
    "rotaract",
    "invoice",
    "calculator",
    "performance",
    "optimization",
    "web-app",
    "financial",
    "rotary"
  ],
  "author": "ZeoSpec",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/zeospec/rotaract-calculator.git"
  },
  "bugs": {
    "url": "https://github.com/zeospec/rotaract-calculator/issues"
  },
  "homepage": "https://dues.rsamdio.org",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "jspdf": "^2.5.1",
    "jspdf-autotable": "^3.5.29"
  },
  "devDependencies": {
    "@babel/core": "^7.22.0",
    "@babel/preset-env": "^7.22.0",
    "artillery": "^2.0.0",
    "cleancss-cli": "^5.6.0",
    "critical": "^5.1.1",
    "eslint": "^8.42.0",
    "imagemin-cli": "^7.0.0",
    "jest": "^29.5.0",
    "lighthouse": "^11.2.0",
    "prettier": "^2.8.8",
    "purgecss": "^5.0.0",
    "snyk": "^1.1000.0",
    "terser": "^5.17.0",
    "webpack": "^5.88.0",
    "webpack-bundle-analyzer": "^4.8.0",
    "webpack-cli": "^5.1.0"
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead",
    "not ie 11"
  ],
  "eslintConfig": {
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "eslint:recommended"
    ],
    "parserOptions": {
      "ecmaVersion": "latest",
      "sourceType": "module"
    },
    "rules": {
      "no-console": "warn",
      "no-unused-vars": "warn",
      "prefer-const": "error"
    }
  },
  "prettier": {
    "semi": true,
    "trailingComma": "es5",
    "singleQuote": true,
    "printWidth": 80,
    "tabWidth": 2
  },
  "jest": {
    "testEnvironment": "jsdom",
    "collectCoverageFrom": [
      "app.js",
      "modules/**/*.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  },
  "webpack": {
    "entry": "./app.js",
    "output": {
      "filename": "bundle.js",
      "path": "./dist"
    },
    "optimization": {
      "minimize": true,
      "splitChunks": {
        "chunks": "all"
      }
    }
  },
  "performance": {
    "budgets": [
      {
        "type": "initial",
        "maxSize": "100kb"
      },
      {
        "type": "asset",
        "assetType": "image",
        "maxSize": "50kb"
      }
    ]
  },
  "snyk": true,
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}